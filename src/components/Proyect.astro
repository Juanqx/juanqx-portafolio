<article class="w-full flex flex-col mb-3 bg-terciary-color p-6 rounded-[20px] border border-[#ffffff11] md:flex-row md:gap-4 lg:gap-6">
  <img src={img} alt="imgProyect" class="w-full h-[224px] rounded-xl sm:h-[340px] md:w-[380px] md:h-[260px] lg:w-[400px] lg:h-[260px]">
  <div class="md:flex md:flex-col md:justify-between md:items-start">
    <div>
      <div class="flex flex-row gap-2 mt-5 md:mt-0">
        <h6 class="py-1 px-2 text-sm text-text-color-secondary font-semibold border border-text-color-secondary rounded-2xl" >{tech1}</h6>
        <h6 class="py-1 px-2 text-sm text-text-color-secondary font-semibold border border-text-color-secondary rounded-2xl" >{tech2}</h6>
